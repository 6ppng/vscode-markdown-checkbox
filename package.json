{
    "name": "markdown-checkbox",
    "displayName": "markdown-checkbox",
    "description": "create checkboxes in markdown",
    "version": "0.0.1",
    "publisher": "Philipp Kief",
    "engines": {
        "vscode": "^1.4.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.createCheckbox",
        "onCommand:extension.markCheckbox"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.createCheckbox",
                "title": "Markdown: Create checkbox"
            },
            {
                "command": "extension.markCheckbox",
                "title": "Markdown: Mark checkbox"
            }
        ],
        "keybindings": [
            {
                "command": "extension.createCheckbox",
                "key": "ctrl+shift+c",
                "mac": "cmd+shift+c",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.markCheckbox",
                "key": "ctrl+shift+enter",
                "mac": "cmd+shift+enter",
                "when": "editorTextFocus"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "resourceLangId == markdown",                                
                    "command": "extension.createCheckbox",
                    "alt": "extension.createCheckbox",
                    "group": "navigation"
                },
                {
                    "when": "resourceLangId == markdown",                                        
                    "command": "extension.markCheckbox",
                    "alt": "extension.markCheckbox",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
        "compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^1.8.5",
        "vscode": "^0.11.0"
    }
}